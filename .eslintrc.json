{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["graphql"],
    "rules": {
        "graphql/template-strings": [
            "error", {
              // I"m using .graphqlconfig to import the schema
              "env": "literal"
          }]
    }
}